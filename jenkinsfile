pipeline {
    agent any

    stages {
      stage('checkout') {
        steps {
          git credentialsId: 'git_login', url: 'https://github.com/IainLR/dockerfile-test-loan.git'
        }
      }
        stage('Build') {
            steps {
                  
                    sh 'docker build . -t jbnilles/test:1.0'

                 
            }
        }
        stage('Test') {
            steps {
                echo 'Testing.. ${env.BUILD_NUMBER}'
            }
        }
        stage('Deploy') {
            steps {
                sh 'docker push jbnilles/test:1.0'
            }
        }
    }

}